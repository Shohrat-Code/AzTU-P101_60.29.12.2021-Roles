@model IdentityRole
@{
    ViewData["Title"] = "RoleUpdate";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="account" asp-action="roleupdate" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Role</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    <input asp-for="@Model.Id" hidden/>
                    <input asp-for="@Model.NormalizedName" hidden/>
                    <input asp-for="@Model.ConcurrencyStamp" hidden/>
                    @*<input name="oldRole" value="@Model.Name" hidden/>*@
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>