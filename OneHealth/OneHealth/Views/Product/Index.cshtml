@model VmProduct

<div class="products py-5">
    <div class="container">
        <div class="row g-2">
            @foreach (var item in Model.Products)
            {
                <div class="col-lg-3 mb-3">
                    <div class="card">
                        <img src="~/assets/img/@item.Image" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Price</p>
                            <a asp-controller="shopping" asp-action="addToCart" asp-route-id="@item.Id" class="btn @(Model.Cart!=null && Model.Cart.Any(c=>c==item.Id.ToString())==true?"btn-danger":"btn-primary")">Add to cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>